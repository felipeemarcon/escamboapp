<h1 class="page-header">Categorias</h1>
<% if @admin.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @admin.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="panel panel-default">
<div class="panel-heading">
    <%= action %>
</div>
<!-- /.panel-heading -->
<div class="panel-body">
  <div class="col-lg-4">
    <%= form_for([:backoffice, @admin]) do |f| %>
      <div class="form-group">
          <label>Descrição</label>
          <%= f.text_field :email, class: "form-control", placeholder: "teste@teste.com" %>
      </div>
      <div class="form-group">
          <label>Senha</label>
          <%= f.password_field :password, class: "form-control", placeholder: "Senha" %>
      </div>
      <div class="form-group">
          <label>Confirmação da senha</label>
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirmação da senha" %>
      </div>
      <button type="submit" class="btn btn-default">Salvar</button>
    <% end %>
  </div>
</div>
<!-- /.panel-body -->
</div>
