<h1>Listando meus anúncios</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Imagem</th>
      <th scope="col">Título</th>
      <th scope="col">Categoria</th>
      <th scope="col">Preço</th>
      <th scope="col">Ações</th>
    </tr>
  </thead>
  <tbody>
  <% @ads.each do |ad| %>
    <tr>
      <th scope="row"><%= ad.id %></th>
      <td><%= image_tag ad.picture.url(:thumb) %></td>
      <td><%= ad.title %></td>
      <td><%= ad.category.description %></td>
      <td><%= humanized_money_with_symbol(ad.price) %></td>
      <td>
        <%= link_to edit_site_profile_ad_path(ad), class: "btn btn-primary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>