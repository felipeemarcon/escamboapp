<div class="panel mt-4">
  <%= image_tag @ad.picture(:display), html: { class: "card-img-top img-fluid", alt: @ad.title }, style: "width: 100%" %>
  <div class="panel-body">
    <h3 class="panel-title"><%= @ad.title %></h3>
    <h4><%= humanized_money_with_symbol @ad.price %></h4>
    <div><%= @ad.description.html_safe %></div>
  </div>

  <div class="ratings">
    <p class="pull-right">3 reviews</p>
    <p><%= rating_for @ad, 'quality' %></p>
  </div>

</div>
<!-- /.card -->

<div class="panel my-4">
  <div class="panel-heading">
    <h4>Product Reviews</h4>
  </div>
  <div class="panel-body">
    <%= render partial: 'site/ad_detail/comments' %>

    <% if member_signed_in? %>
      <button type="button" class="btn btn-success" data-toggle="modal" data-target="#commentModal">Deixe um coment√°rio</button>
    <% else %>
      <button type="button" class="btn btn-success" disabled="disabled">Efetue login para comentar</button>
    <% end %>
  </div>
</div>
