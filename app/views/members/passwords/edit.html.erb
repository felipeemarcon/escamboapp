<div class="container"> 
  <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-push-3 col-sm-8 col-sm-push-2">             
    <h2 class="text-center">Recuperando senha</h2>  
    <div class="panel panel-info" >
      <div class="panel-heading">
        <div class="row">
          <div class="col-sm-6">
            <div class="panel-title">Escolha sua nova senha</div>
          </div>
        </div>
      </div>     

      <div style="padding-top:30px" class="panel-body">
        <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>    
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {class: "form-horizontal", role: "form", method: :put})  do |f| %> 
            <%= devise_error_messages! %>
            <%= f.hidden_field :reset_password_token %>
            <div style="margin-bottom: 25px" class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", placeholder: "Digite sua nova senha" %>
            </div>
            <div style="margin-bottom: 25px" class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
              <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "off", class: "form-control", placeholder: "Confirme sua nova senha" %>
            </div>
            <div style="margin-top:10px" class="form-group">
              <!-- Button -->
                <div class="col-sm-12 controls text-center">
                  <%= f.submit "Mudar minha senha", class: "btn btn-lg btn-success" %>
                </div>
            </div>    
          <% end %>     
        </div>                     
    </div>  
  </div>

</div>

<% flash.each do |key, value| %>
  <%= javascript_tag "$.notify({message: '#{value}' },{type: 'danger', placement: {from: 'bottom', align: 'right'}, animate: {enter: 'animated fadeInUp', exit: 'animated fadeOutDown'}});" %>
<% end %>

<% unless devise_error_messages!.blank? %>
  <% resource.errors.full_messages.each do |message| %>
    <%= javascript_tag "$.notify({message: '#{message}' },{type: 'danger', placement: {from: 'bottom', align: 'right'}, animate: {enter: 'animated fadeInUp', exit: 'animated fadeOutDown'}});" %>
  <% end %>
<% end %>
