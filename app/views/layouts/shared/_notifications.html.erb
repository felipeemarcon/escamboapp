<% if notice %>
  <%= javascript_tag "$.notify({message: '#{notice}' },{type: 'success', placement: {from: 'bottom', align: 'right'}, animate: {enter: 'animated fadeInUp', exit: 'animated fadeOutDown'}});" %>
<% end %>
  
<% if alert %>
  <%= javascript_tag "$.notify({ message: '#{alert}' },{type: 'danger', placement: {from: 'bottom', align: 'right'}, animate: {enter: 'animated fadeInDown', exit: 'animated fadeOutUp'}});" %>
<% end %>